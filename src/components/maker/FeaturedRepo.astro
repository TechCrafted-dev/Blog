---
interface Props {
    name: string;
    description: string;
    updated_at: string;
    language: string;
    id: string;
}

const { name, description, updated_at, language, id } = Astro.props;
---

<article class="bg-white dark:bg-neutral-800/60 p-6 rounded-lg shadow-sm
                backdrop-blur-sm border border-neutral-500/10
                dark:border-neutral-700/30 hover:shadow-lg transition-shadow
                 duration-200 group">

    <div class="mb-4">
        <img
            src={`/pages/${id}.webp`}
            onError={(e) => { e.currentTarget.src = '/placeholder.svg'; }}
            alt={`Imagen del artículo destacado: ${name}`}
            class="w-full h-full object-cover rounded-md"
        />
    </div>
    <h3 class="text-2xl font-semibold mb-3">{name}</h3>
    <p class="text-base text-neutral-700 dark:text-neutral-300">
        {description}
    </p>
    <div class="mt-4 flex items-center justify-between">
        <div class="flex items-center gap-4">
            <span class="flex items-center gap-1 text-sm text-neutral-500 dark:text-neutral-400">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                </svg>
                {new Date(updated_at).toLocaleDateString(
                    'es-ES',
                    { year: 'numeric', month: 'short', day: '2-digit' }
                )}
            </span>
            <span class="flex items-center gap-1 text-sm text-neutral-500 dark:text-neutral-400">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 6l-6 6 6 6" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l4-14" />
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 18l6-6-6-6" />
                </svg>
                {language}
            </span>
        </div>
        <a href={`/post/${id}`} class="text-base inline-flex items-center gap-2 text-neutral-800 dark:text-white font-medium group-hover:text-blue-600 transition duration-200">
            Leer Más
            <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
            </svg>
        </a>
    </div>
</article>