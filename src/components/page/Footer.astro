	<!-- Signature -->
	<hr class="flex m-auto w-3/4 border-neutral-200" />
	<div class="max-w-7xl mx-auto flex items-center justify-between border-neutral-200">
		<div class="w-full text-center xl:text-sm text-xs text-neutral-500 py-6">
